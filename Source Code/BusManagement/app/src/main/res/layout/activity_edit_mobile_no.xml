<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/snowWhite"
    android:gravity="top">
    <LinearLayout
        android:id="@+id/email_login_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:layout_marginTop="50dp"
        android:paddingRight="20dp">
        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="20dp"
            android:text="Update Mobile No."
            android:textColor="@color/customized_red"
            android:textAlignment="center"
            android:textSize="26sp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:paddingLeft="60dp"
            android:paddingRight="60dp">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/customized_red"
                android:textColorHint="@color/customized_red">

                <EditText
                    android:id="@+id/updated_mobile_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:drawableLeft="@drawable/ic_phone_red_24dp"
                    android:drawablePadding="10dp"
                    android:hint="@string/prompt_mobile"
                    android:imeActionLabel="@string/action_sign_in_short"
                    android:imeOptions="actionUnspecified"
                    android:inputType="phone"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/customized_red"
                    android:textColorHint="@color/customized_red" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:paddingLeft="60dp"
            android:layout_marginTop="40dp"
            android:paddingRight="60dp">
            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/update_phone_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                fancy:fb_borderColor="@color/cardview_shadow_end_color"
                fancy:fb_borderWidth="4dp"
                fancy:fb_defaultColor="@color/customized_red"
                fancy:fb_focusColor="@color/focus_color"
                fancy:fb_radius="30dp"
                fancy:fb_text="Update"
                fancy:fb_textColor="#FFFFFF" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>